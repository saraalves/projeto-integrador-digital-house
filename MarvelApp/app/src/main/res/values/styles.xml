<resources>
    <style name="MarvelAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ToggleIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconEndPadding">@dimen/dim_0_dp</item>
        <item name="android:insetTop">@dimen/dim_0_dp</item>
        <item name="android:insetBottom">@dimen/dim_0_dp</item>
        <item name="android:paddingLeft">@dimen/dim_12_dp</item>
        <item name="android:paddingRight">@dimen/dim_12_dp</item>
        <item name="android:minWidth">@dimen/dim_30_dp</item>
        <item name="minHeight">@dimen/dim_30_dp</item>
    </style>

    <style name="TitleCollapseBar">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">30</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_25_sp</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">@color/colorText</item>
    </style>

</resources>