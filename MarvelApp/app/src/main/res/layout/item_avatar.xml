<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardPreventCornerOverlap="false"
    android:backgroundTint="@color/colorTransparente"
    app:cardBackgroundColor="@color/material_on_surface_disabled"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:backgroundTint="@color/colorTransparente"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatarPersonagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtNameAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Nome do personagem"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/avatarPersonagem"
            app:layout_constraintStart_toStartOf="@id/avatarPersonagem"
            app:layout_constraintTop_toBottomOf="@+id/avatarPersonagem" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>



