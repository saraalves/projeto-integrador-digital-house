<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dim_14_dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20_dp"
            android:layout_marginTop="@dimen/dim_20_dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="@string/confirmar_cancelamento"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dim_20_sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20_dp"
            android:layout_marginTop="@dimen/dim_40_dp"
            android:layout_marginEnd="@dimen/dim_20_dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/cancelar"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dim_18_sp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10_dp"
            android:layout_marginTop="@dimen/dim_40_dp"
            android:layout_marginEnd="@dimen/dim_10_dp"
            android:layout_marginBottom="@dimen/dim_20_dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <Button
                android:id="@+id/btnContinuarEditando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorTransparente"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="@string/continuar_editando"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/dim_14_sp" />

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@color/colorTransparente"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="@string/confirmar"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_14_sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>