<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical"
    tools:context=".login.view.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_68_dp"
        android:contentDescription="@string/logo_do_aplicativo"
        android:src="@drawable/marvel_logo" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_20_dp"
        android:layout_marginTop="@dimen/dim_40_dp"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:hint="@string/email"
        android:textColorHint="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dim_16_sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_20_dp"
        android:layout_marginTop="@dimen/dim_20_dp"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:background="@android:color/transparent"
        android:hint="@string/senha"
        android:textColorHint="@color/colorPrimary"
        app:boxBackgroundColor="@android:color/transparent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSenhaLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dim_16_sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/btnEsqueciSenha"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/dim_20_dp"
            android:layout_marginTop="@dimen/dim_8_dp"
            android:layout_marginEnd="@dimen/dim_20_dp"
            android:text="@string/esqueci_minha_senha"
            android:textSize="@dimen/dim_14_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_20_dp"
        android:layout_marginTop="@dimen/dim_40_dp"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:background="@color/colorPrimary"
        android:text="@string/log_in"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim_24_sp" />

    <Button
        android:id="@+id/btnNaoTenhoCadastro"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dim_20_dp"
        android:layout_marginTop="@dimen/dim_30_dp"
        android:layout_marginEnd="@dimen/dim_20_dp"
        android:text="@string/n_o_tenho_cadastro"
        android:textSize="@dimen/dim_20_sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_30_dp"
        android:text="@string/logar_com"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dim_16_sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_8_dp"
        android:layout_marginBottom="@dimen/dim_8_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLoginFacebook"
            android:layout_width="@dimen/dim_50_dp"
            android:layout_height="@dimen/dim_50_dp"
            android:layout_marginEnd="@dimen/dim_24_dp"
            android:contentDescription="@string/logo_facebook"
            android:src="@drawable/facebook_logo" />

        <ImageView
            android:id="@+id/imgLoginGoogle"
            android:layout_width="@dimen/dim_50_dp"
            android:layout_height="@dimen/dim_50_dp"
            android:contentDescription="@string/logo_google"
            android:src="@drawable/google_icon" />

    </LinearLayout>

</LinearLayout>